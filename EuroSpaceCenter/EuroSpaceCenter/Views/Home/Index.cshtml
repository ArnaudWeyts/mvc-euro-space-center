@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Euro Space Center 🚀</h1>
    <p class="lead">Come learn more about space and space travel while having loads of thrilling fun!</p>
    <p><a href="/search" class="btn btn-primary btn-lg">lift-off 💥</a></p>
</div>

