@using EuroSpaceCenter.Models
@using System.Linq
@model item

@{
    ViewBag.Title = Model.title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.title</h2>
<p>@Model.description</p>
<img src="@Model.image" alt="@Model.alt" />

@using (Html.BeginForm("Add", "Plan", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Button("add to my plan", new { @class = "btn btn-success", id = "add" })
        <p class="help-block">Add this item to your park plan <span class="emoji">🗺</span></p>
    </div>
}

@using (Html.BeginForm("Rate", "Detail", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="message">Message</label>
        @Html.TextArea("message", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="rating1">Rating</label>
        <input type="range" min="1" max="5" step="1" name="rating1" id="rating1" class="form-control" oninput="this.dataset.value = this.value" required />
    </div>
    <div class="form-group">
        @Html.Button("review", new { @class = "btn" })
    </div>
    <input type="hidden" name="items_id" value="@ViewBag.id" id="items_id" />
}

<section id="ratings">
    <h3>Ratings</h3>
    <div class="row">
        @foreach (rating r in ViewBag.Ratings) {
            <div class="col-sm-1">
                <div class="thumbnail">
                    @Html.GravatarImage(r.user.email)
                </div>
            </div>
            <div class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <div class="pull-left">
                            <strong>@r.user.name</strong>
                            @Html.Time(r.datetime, "{0:d}", new { @class = "text-muted" })
                        </div>
                        <strong class="pull-right sr-only" data-rating="@r.rating1">@r.rating1 / 5</strong>
                    </div>
                    <div class="panel-body">
                        @r.message
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<script>
    NodeList.prototype.forEach = Array.prototype.forEach; // polyfill
    var ratings = document.querySelectorAll('[data-rating]');
    ratings.forEach(function (r) {
        r.innerText = '☄'.repeat(r.dataset.rating) + '⚪'.repeat(5 - r.dataset.rating);
        r.classList.remove('sr-only');
        r.classList.add('emoji');
    })
</script>