@switch ((string)ViewBag.category) {
    case "restaurant":
        <div class="form-group">
            <label for="payment_type">Payment type</label>
            <input required type="text" name="payment_type" id="payment_type" class="form-control"/>
            <p class="help-block">The types of payment available here, think cash, debit, credit, cheque, bitcoin or reddit karma</p>
        </div>
        <script>
            $('.xdsoft_datetimepicker').remove()
        </script>
        break;
    case "attraction":
        <div class="form-group">
            <label for="min_height">Minimum height (cm)</label>
            <input required type="number" name="min_height" id="min_height" class="form-control"/>
            <p class="help-block">The minimum height a person can be on this attraction</p>
        </div>
        <div class="form-group">
            <label for="max_height">Maximum height (cm)</label>
            <input required type="number" name="max_height" id="max_height" class="form-control"/>
            <p class="help-block">The maximum height a person can be on this attraction</p>
        </div>
        <input type="hidden" value="attraction" name="hidden_attraction" />
        <script>
            $('.xdsoft_datetimepicker').remove()
        </script>
        break;
    case "show":
        <div class="form-group">
            <label for="datetime">Moment</label>
            <input required type="datetime" name="datetime" id="datetime" class="form-control"/>
            <p class="help-block">The moment when this show is going on.</p>
            <p class="help-block">Recurring shows are currently not supported</p>
        </div>
        <input type="hidden" value="show" name="hidden_show" />
        <link href="https://unpkg.com/jquery-datetimepicker@2.5.4/build/jquery.datetimepicker.min.css" rel="stylesheet"/>
        <script>
            $.getScript("https://unpkg.com/jquery-datetimepicker@2.5.4/build/jquery.datetimepicker.full.min.js", function () {
                $('#datetime').datetimepicker();
            })
        </script>
        break;
    default:
        <div class="form-group">
            <p class="text-danger help-block">Something went wrong. This category doesn't exist!</p>
        </div>
        <script>
            $('.xdsoft_datetimepicker').remove()
        </script>
        break;
}
