@using EuroSpaceCenter.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    <label for="search">Search</label>
    <input type="search" id="search" class="form-control" />
</div>

<div class="row">
    @foreach (item i in ViewBag.Items) {
        <a class="col-md-3 item blocklink" href="/Detail?id=@i.id">
            <article class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">@i.title</h2>
                </div>
                <div class="panel-image">
                    <img src="@i.image" alt="@i.alt" />
                </div>
                <div class="panel-body text-center">
                    <p>@i.description</p>
                </div>
            </article>
        </a>
    }
</div>


@section scripts {
    @* loaded over CDN, thus better than downloading it here *@
    <script src="https://unpkg.com/holmes.js@1.15.1"></script>
    <script>
        holmes({
            hiddenAttr: true,
            find: '.item'
        });
    </script>
}