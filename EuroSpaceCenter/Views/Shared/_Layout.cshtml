<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Euro Space center</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Euro Space Center 🚀", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <nav class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("admin")) {
                        <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    }
                </ul>
                @if (User.Identity.IsAuthenticated) {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Account", "Index", "Account", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "account" ? "active" : "") })</li>
                                <li>@Html.ActionLink("Park plans", "Index", "Plan")</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Login" && ViewContext.RouteData.Values["action"].ToString() == "logout" ? "active" : "") })</li>
                            </ul>
                        </li>
                    </ul>
                } else {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Account", null, new { @class = (ViewContext.RouteData.Values["controller"].ToString() == "Login" ? "active" : "") })</li>
                        <li><a href="/Account/Register">Register</a></li>
                    </ul>
                }
            </nav>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData.ContainsKey("message")) {
            <div class="alert alert-info alert-dismissable">
                @TempData["message"]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>Made 😡 by <a href="https://haroen.me">Haroen</a> for Odisee | <a href="https://github.com/Haroenv/mvc-euro-space-center"><span class="emoji">⚙</span> code</a> | <a href="/api"><span class="emoji">☁️</span> api</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
